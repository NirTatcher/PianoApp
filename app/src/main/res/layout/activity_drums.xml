<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DrumsActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
android:background="@drawable/woody"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:weightSum="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="20">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <ImageView
                android:id="@+id/piano_icon"
                android:layout_width="57dp"
                android:layout_height="62dp"
                 android:layout_gravity="center"
                app:srcCompat="@drawable/icon" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <Button
                android:id="@+id/btnRecord"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"


                android:backgroundTint="#DC1515"
                android:fadingEdge="vertical"
                android:text="RECORD"
                android:textColorHint="@color/black" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="59dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/profile_transparent" />
        </LinearLayout>
        <LinearLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="20">
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />


            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10" />

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:srcCompat="@drawable/drumsnare" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="20">
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />
            <ImageView
                android:id="@+id/crash1"
                android:layout_width="163dp"
                android:layout_height="138dp"
                app:srcCompat="@drawable/hihat3" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10" />
            <ImageView
                android:id="@+id/hihat1"
                android:layout_width="170dp"
                android:layout_height="133dp"

                app:srcCompat="@drawable/crash2" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="20">


            <ImageView
                android:id="@+id/miriamdrum"
                android:layout_width="186dp"
                android:layout_height="97dp"
                android:layout_weight="20"
                app:srcCompat="@drawable/miriamdrum" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="20">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <ImageView
                android:id="@+id/kick1"
                android:layout_width="139dp"
                android:layout_height="109dp"
                app:srcCompat="@drawable/drumkick2" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10" />

            <ImageView
                android:id="@+id/snare2"
                android:layout_width="118dp"
                android:layout_height="107dp"
                app:srcCompat="@drawable/drumsnare2" />

        </LinearLayout>

        <LinearLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="20">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />


            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:srcCompat="@drawable/drumsnare" />


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="20">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <ImageView
                android:id="@+id/kick2"
                android:layout_width="168dp"
                android:layout_height="113dp"
                app:srcCompat="@drawable/drumkick3" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10" />

            <ImageView
                android:id="@+id/snare1"
                android:layout_width="116dp"
                android:layout_height="114dp"
                app:srcCompat="@drawable/drumsnare" />


        </LinearLayout>


    </LinearLayout>

</ScrollView>