<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FF0101"
    tools:context=".DrumsActivity">

    <ImageView
        android:id="@+id/drumkick"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="39dp"
        android:onClick="playKick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/snareDrum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hihat"
        app:srcCompat="@drawable/drum"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/snareDrum"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginEnd="57dp"
        android:layout_marginBottom="51dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/drumkick"
        app:layout_constraintTop_toBottomOf="@+id/crash"
        app:srcCompat="@drawable/drum2"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/hihat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/drumkick"
        app:layout_constraintEnd_toStartOf="@+id/snareDrum"
        app:layout_constraintStart_toStartOf="@+id/drumkick"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hihat" />

    <ImageView
        android:id="@+id/crash"
        android:layout_width="144dp"
        android:layout_height="0dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="49dp"
        app:layout_constraintBottom_toTopOf="@+id/snareDrum"
        app:layout_constraintStart_toEndOf="@+id/drumkick"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hihat2" />

</androidx.constraintlayout.widget.ConstraintLayout>