<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/play_rec_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="2dp"
        android:text="PLAY"
        />

    <TextView
        android:layoutDirection="rtl"
        android:id="@+id/rec_name"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:text="TextView"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/play_rec_btn"
        app:layout_constraintStart_toEndOf="@+id/play_rec_btn"
        app:layout_constraintTop_toTopOf="@+id/play_rec_btn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/del_rec_btn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/outline_delete_24"
        app:layout_constraintBottom_toBottomOf="@+id/rec_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rec_name"
        app:layout_constraintTop_toTopOf="@+id/rec_name" />

</androidx.constraintlayout.widget.ConstraintLayout>